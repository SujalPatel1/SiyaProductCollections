@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}

<div class="shift-content-below">
    <div class="form-box">
        <h1 class="form-title">User Login</h1>
        <form method="post" class="common-form">
            <label class="form-label" asp-for="Username">Username</label>
            <input class="form-input" asp-for="Username" />
            <span class="form-error" asp-validation-for="Username"></span>

            <label class="form-label" asp-for="Password">Password</label>
            <input class="form-input" asp-for="Password" type="password"/>
            <span class="form-error" asp-validation-for="Password"></span>

            <div>
                <input asp-for="RememberMe" type="checkbox" />
                <label asp-for="RememberMe" class="form-label"> Remember Me?</label>
            </div>      
            <button class="form-button"><i class="fa fa-sign-in"></i> Login</button>
            <div class="form-error" asp-validation-summary="ModelOnly"></div>
        </form>
        <div class="footer-login">
             <h5>New to SiyaCollections</h5>
             <a class="btn" asp-controller="Account" asp-action="Register"><i class="fa-solid fa-user-plus"></i> Register Now </a>
        </div>
    </div>
</div>